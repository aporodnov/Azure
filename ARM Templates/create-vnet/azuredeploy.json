{
"$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
"contentVersion": "1.0.0.0",
"parameters": {},
"variables": {
    "vNetName": "DevEnv-vNet",
    "env": "development"
},
"resources": [
    {
        "name": "[variables('vNetName')]",
        "type": "Microsoft.Network/virtualNetworks",
        "apiVersion": "2019-11-01",
        "location": "[resourceGroup().location]",
        "tags": {
            "env": "[variables('env')]"
        },
        "properties": {
            "addressSpace": {
                "addressPrefixes": [
                    "172.20.0.0/16"
                ]
            },
            "subnets": [
                {
                    "name": "PublicSub-1",
                    "properties": {
                        "addressPrefix": "172.20.0.0/24"
                    }
                },
                {
                    "name": "PrivateSub-1",
                    "properties": {
                        "addressPrefix": "172.20.10.0/24"
                    }
                }
            ]
        }
    },
    {
        "name": "Private-NSG",
        "type": "Microsoft.Network/networkSecurityGroups",
        "apiVersion": "2019-11-01",
        "location": "[resourceGroup().location]",
        "properties": {
            "securityRules": []
        }
    },
 {
     "name": "Public-NSG",
     "type": "Microsoft.Network/networkSecurityGroups",
     "apiVersion": "2019-11-01",
     "location": "[resourceGroup().location]",
     "properties": {
         "securityRules": [
             {
                 "name": "Allow-Inbound-SSH",
                 "properties": {
                     "description": "SSH",
                     "protocol": "Tcp",
                     "sourcePortRange": "*",
                     "destinationPortRange": "22",
                     "sourceAddressPrefix": "*",
                     "destinationAddressPrefix": "*",
                     "access": "Allow",
                     "priority": 100,
                     "direction": "Inbound"
                 }
             },
             {
                 "name": "Allow-Inbound-HTTP-HTTPS",
                 "properties": {
                     "description": "HTTP/HTTPS",
                     "protocol": "Tcp",
                     "sourcePortRange": "*",
                     "destinationPortRanges": [
                         "80",
                         "443"
                     ],
                     "sourceAddressPrefix": "*",
                     "destinationAddressPrefix": "*",
                     "access": "Allow",
                     "priority": 200,
                     "direction": "Inbound"
                 }
             }
         ]
     }
 }
],
"outputs": {}
}